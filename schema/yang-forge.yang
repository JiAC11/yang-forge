module yang-forge {
  namespace "urn:corenova:yang:yang-forge";
  prefix forge;
  yang-version 1.1;

  import ietf-yang-types      { prefix yang; }
  import yang-meta-types      { prefix meta; }
  import node-package-manager { prefix npm; }

  organization
    "Corenova Technologies, Inc.";
  contact
    "Peter K. Lee <peter@corenova.com>";
  description
    "This module provides YANG schema and package management operations";

  revision 2016-11-09 {
    description "Updated to YANG 1.1 and revised with npm and commander module dependencies";
  }
  revision 2016-03-25 {
    description "Enhanced with 0.12.x functionality";
  }
  revision 2015-09-23 {
    description "Enhanced with 0.10.x functionality";
  }
  revision 2015-05-04 {
    description "Initial revision";
  }

  typedef core-identifier {
    type npm:package-name;
  }
  
  /*
   * Groupings
   */
  grouping core-essence {
    description
      "The core essence of a software module.";
    leaf id {
      type yang:uuid;
    }
    leaf main {
      type leafref {
        path "../module/tag";
      }
    }
    list module {
      
    }
    list submodule {
      
    }
    list extension {
      
    }
    list typedef {
      
    }
    action compose {
      
    }
    action import {
      
    }
    action export {
      
    }
  }
  grouping cores-list {
    list core {
      key "id";
      uses forge:core-essence;
    }
  }
  /*
   * Augment external configuration data nodes
   */
  
  /*
   * Operational state data nodes
   */
  container store {
    config false;
    uses cores-list;
  }
  
  /*
   * Remote procedure operations
   */
  rpc import {
    description
      "Imports generated core(s) of matching NPM package(s) into the runtime store";
    input {
      uses npm:package-selection;
      leaf sync {
        type boolean;
        default true;
      }
    }
    output {
      leaf-list cores {
        type instance-identifier;
      }
    }
  }
  rpc create {
    output {
      container core {
        uses forge:core-essence;
      }
    }
  }
}
